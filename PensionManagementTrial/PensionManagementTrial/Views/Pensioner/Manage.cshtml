@model IEnumerable<PensionManagementTrial.Models.PensionerDetails>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Pension Details</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New
			</a>
		</div>
	</div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
			</th>
            <th>
                Aadhar Number
			</th>
            <th>
                Salary Earned
			</th>
            <th>
                Allowances
			</th>
            <th>
                Banks
			</th>
            <th>
                Pension Amount
			</th>
            <th></th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="10%">
                    @obj.Name
				</td>
                <td width="15%">
                    @obj.AadharNumber
				</td>
                <td width="13%">
                    @obj.SalaryEarned
				</td>
                <td width="13%">
                    @obj.Allowances
				</td>
                <td width="10%">
                    @obj.Banks.BankName
				</td>
                <td width="14%">
                    @obj.PensionAmount
				</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@obj.Prid"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-action="Details" asp-route-id="@obj.Prid"
                        class="btn btn-info mx-2"> <i class="bi bi-info-circle"></i> Details</a>
                        <a asp-action="Delete" asp-route-id="@obj.Prid"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
					</div>
				</td>
			</tr>
        }
    </tbody>

</table>
</div>


