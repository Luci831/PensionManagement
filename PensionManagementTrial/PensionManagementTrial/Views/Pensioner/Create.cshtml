@model PensionManagementTrial.Models.PensionerDetails

@{
    var title = "Create New Pensioner";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Create</h1>

<h4>Pension</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dob" class="control-label"></label>
                <input asp-for="Dob" type="date" min="1900-01-01" max="1970-12-31" class="form-control" />
                <span asp-validation-for="Dob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pan" class="control-label"></label>
                <input asp-for="Pan" class="form-control" />
                <span asp-validation-for="Pan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AadharNumber" class="control-label"></label>
                <input asp-for="AadharNumber" class="form-control" />
                <span asp-validation-for="AadharNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountNo" class="control-label"></label>
                <input asp-for="AccountNo" class="form-control" />
                <span asp-validation-for="AccountNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaryEarned" class="control-label"></label>
                <input asp-for="SalaryEarned" class="form-control" />
                <span asp-validation-for="SalaryEarned" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Allowances" class="control-label"></label>
                <input asp-for="Allowances" class="form-control" />
                <span asp-validation-for="Allowances" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ptid" class="control-label"></label>
                <select asp-for="Ptid" class ="form-control" asp-items="ViewBag.Ptid"></select>
            </div>
            <div class="form-group">
                <label asp-for="BankId" class="control-label"></label>
                <select asp-for="BankId" class ="form-control" asp-items="ViewBag.BankId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="text-danger">@ViewBag.Message</div>
<div>
    <a asp-action="Manage" class="btn btn-danger">Back to List</a>
</div>
@section Scripts {
     <script>
        $(function () {
            $('#datepicker').datepicker({
                changeMonth: true,
                changeYear: true,
                yearRange: "1900:1970"
            });
        })
    </script>
}
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
