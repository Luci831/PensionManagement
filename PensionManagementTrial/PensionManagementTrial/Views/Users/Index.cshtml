@model IEnumerable<PensionManagementTrial.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Pensioner Details</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New
            </a>
		</div>
	</div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                First Name
			</th>
            <th>
                Last Name
			</th>
            <th>
                Date of Birth
			</th>
            <th>
                Contact Number
			</th>
            <th>
                Email ID
			</th>
            <th></th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="15%">
                    @obj.FirstName
				</td>
                <td width="15%">
                    @obj.LastName
				</td>
                <td width="20%">
                    @obj.Dob
				</td>
                <td width="25%">
                    @obj.ContactNumber
				</td>
                <td width="15%">
                    @obj.Email
				</td>
                <td>
                    <div class="w-100 btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@obj.UserId"
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-action="Details" asp-route-id="@obj.UserId"
                        class="btn btn-info mx-2"> <i class="bi bi-info-circle"></i> Details</a>
                        <a asp-action="Delete" asp-route-id="@obj.UserId"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
					</div>
				</td>
			</tr>
        }
    </tbody>

</table>
</div>

